<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemoDataBinding.Pages.BindingModes"
             Title="BindingModes">
    
    <VerticalStackLayout>

        <Entry x:Name="origem"
               FontSize="30"
               Placeholder="origem"
               Text="Origem" />

        <Entry x:Name="destino"
               FontSize="30"
               Placeholder="destino"
               Text="{Binding Source={x:Reference origem}, Path=Text, Mode=TwoWay}" />

    </VerticalStackLayout>
</ContentPage>